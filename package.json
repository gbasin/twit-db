{
  "name": "twit-db",
  "version": "1.0.0",
  "description": "Twitter Likes Archiver Desktop App",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gbasin/twit-db.git"
  },
  "author": "Gary Basin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gbasin/twit-db/issues"
  },
  "homepage": "https://github.com/gbasin/twit-db#readme",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsc && concurrently \"tsc -w\" \"vite\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "start": "electron .",
    "build": "tsc && vite build",
    "test": "jest",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [],
  "dependencies": {
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "concurrently": "^8.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^10.0.0",
    "jest": "^29.7.0",
    "playwright": "^1.49.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@playwright/test": "^1.49.1",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.6.4",
    "@types/sqlite3": "^3.1.8",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "ts-node": "^10.9.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "twit_db"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
